<h1><%= @random_letters %></h1>

<form action="/score" method="POST">
  <input type="text" name="answer" placeholder="What is your word of choice?">
  <input type="hidden" name="letters" value="<%= @random_letters %>">
  <input type="submit" value="play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
